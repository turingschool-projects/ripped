<div class="container">
  <h3>Dashboard</h3>
  <div class="row">
    <div class="col s4">
      <h5>Feedback</h5>
      <% @solutions.each do |solution| %>
        <% if solution.feedbacks.count > 0 %>
          <% solution.feedbacks.each do |fb| %>
            <p>User <%= fb.user.census_id %>:
            <%= fb.comment %></p>
          <% end %>
        <% end %>
      <% end %>
    </div>
    <div class="col s4">
      <h5>Exercises in Progress</h5>
      <ul id="in-progress">
        <% @in_progress.each do |solution| %>
          <li><%= link_to solution.exercise.name, exercise_solution_path(solution.exercise, solution) %></li>
        <% end %>
      </ul>
    </div>
    <div class="col s4">
      <h5> Completed Exercises</h5>
      <ul id="completed">
        <% @completed.each do |solution| %>
          <li><%= link_to solution.exercise.name, exercise_solution_path(solution.exercise, solution) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
